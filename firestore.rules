rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own data, and read other users for search
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Messages are readable and writable by chat participants
    match /messages/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
        // Sender can update their own messages
        request.auth.uid == resource.data.senderId ||
        // Recipients can update delivery status (mark as read)
        request.auth.uid in resource.data.recipients
      );
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.senderId;
    }
    
    // Chats are readable and writable by participants
    match /chats/{chatId} {
      allow read: if request.auth != null && 
        request.auth.uid in resource.data.participants;
      allow create: if request.auth != null && 
        request.auth.uid in request.resource.data.participants;
      allow update: if request.auth != null && 
        request.auth.uid in resource.data.participants;
      allow delete: if request.auth != null && 
        request.auth.uid in resource.data.participants;
    }
    
    // AI context is readable by chat participants
    match /aiContext/{chatId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
    }
    
    // AI insights are readable by chat participants
    match /aiInsights/{chatId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
    }
    
    // Test collection for debugging - allow all access for connection testing
    match /test/{document} {
      allow read, write: if true;
    }
    
    // User-specific unread counts - secure and efficient
    match /userUnreadCounts/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Simulator notifications - only for development/testing
    match /simulator_notifications/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null; // Any authenticated user can write
    }
    
    // Simulator notification subcollection
    match /simulator_notifications/{userId}/notifications/{notificationId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null; // Any authenticated user can write
    }
  }
}
